        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:layout_constraintVertical_bias="0.153">

        <RelativeLayout
            android:id="@+id/PLayer1Card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/player_card_current">

            <TextView
                android:id="@+id/Player1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Player1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Player1Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/Player1Name"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Player2Card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/PLayer1Card"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/default_player_card">

            <TextView
                android:id="@+id/Player2Name"
