<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/twowaybottom1">
        <rotate android:fromDegrees="-45" android:toDegrees="-50" android:pivotX="100%" android:pivotY="0%" >
            <shape android:shape="rectangle" android:width="350dp">
                <stroke android:color="@color/playerPink" android:width="10dp"/>
                <solid android:color="@color/playerPink" android:width="50dp" />
            </shape>
        </rotate>
    </item>
    <item android:id="@+id/twowaybottom2">
        <rotate android:fromDegrees="-45" android:toDegrees="-50" android:pivotX="125%" android:pivotY="60%" >
            <shape android:shape="rectangle">
                <stroke android:color="@color/playerPink" android:width="10dp"/>
                <solid android:color="@color/playerPink" />
            </shape>
        </rotate>
    </item>
</layer-list>