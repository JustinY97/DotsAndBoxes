<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate android:fromDegrees="45" android:toDegrees="50" android:pivotX="100%" android:pivotY="1%" >
            <shape android:shape="rectangle" android:width="350dp">
                <stroke android:color="@color/playerRed" android:width="10dp"/>
                <solid android:color="@color/playerRed" android:width="50dp" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="45" android:toDegrees="50" android:pivotX="50%" android:pivotY="-20%" >
            <shape android:shape="rectangle">
                <stroke android:color="@color/playerRed" android:width="10dp"/>
                <solid android:color="@color/playerRed" />
            </shape>
        </rotate>
    </item>
</layer-list>